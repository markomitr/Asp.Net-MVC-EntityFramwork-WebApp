@{
    Layout = null;
}

@helper SetAcitveTab(string name)
{
    if (ViewBag.ActiveTab == name)
    {
        @:active
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TeslaSolar -  solar power and heating installation services. Chicago, Illinois. Chicago solar services -  @ViewBag.Title</title>  
    <link type="image/x-icon" rel="shortcut icon" href="~/Pictures/fico.ico">
    @Styles.Render("~/Content/css")
</head>
<body>

        <div class="container">
            <div class="row ">
                <div class="col">
                    <img alt="Tesla-Soalr-Solutions-Chicago-Solar-Design-Solar-Installation-Solar-Projects" src="~/Pictures/banner_v2.jpg" class="img-responsive" style="min-height: 50px;">
                </div>
            </div>
          
            <div class="row" style="height: 40px !important;">
                <div class="col">
                    <nav class="navbar navbar-default" style="position: relative; z-index: 10000;">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand hidden-xs" href="@Url.RouteUrl("Home",new {},"http")">Tesla Solar - <i>Solarize your future</i></a>
                                <a class="navbar-brand visible-xs" href="@Url.RouteUrl("Home")">TeslaSolar <small><i>Solarize your future</i></small></a>
                            </div>
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav">
                                    <li class="@SetAcitveTab("Home")">
                                        <a href="@Url.RouteUrl("Home")">
                                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                                            <span class="sr-only">(current)</span>
                                            Home
                                        </a>
                                    </li>
                                    <li class="@SetAcitveTab("Project")">
                                        <a href="@Url.RouteUrl("Projects")">
                                            <span class="glyphicon glyphicon-record" aria-hidden="true"></span>
                                            Projects
                                        </a>
                                    </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="@SetAcitveTab("AdminProject")">
                                    <a href="@Url.RouteUrl("AdminProject")">
                                        <span class=" glyphicon glyphicon-edit" aria-hidden="true"></span>                                      
                                        Admin
                                    </a>
                                </li>
                                <li class="@SetAcitveTab("Logout")">
                                    <a href="@Url.RouteUrl("Logout")">
                                        <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                                        <small><i>Sign out</i></small>
                                    </a>
                                </li>
                            }
                            else
                            {
                                    <li class="@SetAcitveTab("About")">
                                        <a href="@Url.RouteUrl("About")">
                                            <span class="glyphicon glyphicon-record" aria-hidden="true"></span>
                                            About
                                        </a>
                                    </li>
                                    <li class="@SetAcitveTab("Contact")">
                                        <a href="@Url.RouteUrl("Contact")">
                                            <span class="glyphicon glyphicon-record" aria-hidden="true"></span>
                                            Contact
                                        </a>
                                    </li>                                                                
                               }
                                </ul>
                            </div>
                        </div>
                    </nav>

                </div>
            </div>
         
                @RenderBody()
               
        </div>
    <footer class="footera">
        <div class="container-fluid footer">
            <div class="row">
                <div class="col text-center">
                    <h5>
                        <span class="glyphicon glyphicon-credit-card" aria-hidden="true"></span>
                        Tesla Solar Technologies
                    </h5>
                    <h5>
                        <span class="glyphicon glyphicon-phone" aria-hidden="true"></span>
                        773-330-3411
                    </h5>
                    <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                    <a href="mailto:teslasolartechnologies@yahoo.com">
                        @Html.Encode("teslasolartechnologies@yahoo.com")
                    </a>
                    <br/>
                    <i>Chicago area,IL</i>
                    &copy; @DateTime.Now.Year
                </div>

            </div>
            <div class="col text-center">
                <div class="text-info">
                    <a href="@Url.RouteUrl("Login")" class="btn-degault">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        <small><i>Sign in</i></small>
                    </a>
                </div>
            </div>
            <div class="col text-center">
                <div class="text-info">
                    <a href="https://plus.google.com/111022696006303516992" style="text-decoration:none; color:black;"  rel="publisher">                 
                        
                        <small><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span><i> G+</i></small>
                    </a>
                </div>
            </div>
           
            </div>
    </footer>
 
 
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    <script>
