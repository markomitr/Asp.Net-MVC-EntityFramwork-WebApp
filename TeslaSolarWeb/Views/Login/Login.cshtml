@model TeslaSolarWeb.ViewModel.AuthLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 text-center" style="background-color: white; border: 1px solid silver; padding: 10px;">
        <div class="page-header" style="margin-top: 0px !important; ">
            <h4><span class="glyphicon glyphicon-chevron-right"></span>Sign in <small>- TeslaSolar website admin!</small></h4>
        </div>
        @using (Html.BeginForm("Login", "Login", new{returnUrl = ViewBag.returnUrl}, FormMethod.Post, new { @class = "form-horizontal"}))
        {
            <p class="bg-danger">
                @Model.Message
            </p>
            @Html.ValidationSummary()
            <div class="form-group">              
                @Html.LabelFor(x => x.Username, new {@class = "col-sm-3"})
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.Username, new {@class = "form-control focus"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password, new { @class = "col-sm-3" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.Password, new { type = "password", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9 text-right ">
                    <input type="submit" value="Enter" class="btn btn-warning btn-lg" />
                </div>
            </div>
        }
    </div>
</div>