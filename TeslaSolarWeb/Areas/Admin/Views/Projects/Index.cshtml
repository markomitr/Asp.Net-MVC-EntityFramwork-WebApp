@model IEnumerable<TeslaSolarWeb.Models.Project>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12" style="background-color: white; border: 1px solid silver; padding: 10px;">
        <h2></h2>
        <div class="page-header" style="margin-top: 0px !important;">
            <h3><span class="glyphicon glyphicon-chevron-right"></span>Projects administration</h3>
        </div>
        <p>
            @Html.ActionLink("Create New project", "Create", "", new { @class = "btn btn-success" })
        </p>
        <br/>
        <table class="table table-striped table-condensed table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Caption)
                </th>
                <th class="hidden-xs">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>  
                    <td>
                        @Html.DisplayFor(modelItem => item.Caption)
                    </td>
                    <td class="hidden-xs">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a href="@Url.Content(item.ImageUrl)" class="thumbnail pregledProektiList">
                            <img src="@Url.Content(item.ImageUrlSmall)" alt="SolarProjectPicture">
                        </a>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning kopceAkcijaProektList" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-default kopceAkcijaProektList" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = " btn btn-sm btn-danger kopceAkcijaProektList" })
                    </td>
                </tr>
            }

        </table>

    </div>

</div>
